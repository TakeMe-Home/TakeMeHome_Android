<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.garam.takemehome_android.ui.call.CallFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_call">

        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.garam.takemehome_android.ui.assignedOrder.AssignedOrderFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_assigned" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.garam.takemehome_android.ui.order.OrdersFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_order" />

</navigation>